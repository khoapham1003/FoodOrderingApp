<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/passWord_SU"
        android:layout_width="400dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textSize="16dp"
        app:passwordToggleEnabled="true" />

    <EditText
        android:id="@+id/email_SU"
        android:layout_width="400dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:background="@drawable/edittext_background"
        android:gravity="center_vertical"
        android:hint="Email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/CFPassWord_SU"
        android:layout_width="400dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Confirm Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textSize="16dp"
        app:passwordToggleEnabled="true" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="400dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="555dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#FF897D"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/imageViewMinus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/frame_13935" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="660dp"
        android:text="Already have an account?"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/SignIn_SU"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="655dp"
        android:padding="5dp"
        android:text="Sign In"
        android:textSize="16dp"
        android:textStyle="bold" />
</RelativeLayout>